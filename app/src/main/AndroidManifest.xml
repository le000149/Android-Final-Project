<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject"
        tools:targetApi="31">
        <activity
            android:name=".songsearch.SongResultActivity"
            android:exported="false"
            android:label="string/song_search"
            android:theme="@style/Theme.FinalProject" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sunrisesunset.SunriseSunsetActivity"
            android:exported="true"
            android:label="@string/sunrise_sunset">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".songsearch.SongSearchActivity"
            android:exported="true"
            android:label="@string/song_search">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>

        <activity
            android:name=".recipe.RecipeActivity"
            android:exported="true"
            android:label="@string/recipe_search">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>

        <activity
            android:name=".dictionary.DictionaryActivity"
            android:exported="true"
            android:label="@string/dictionary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>
        <activity
            android:label="@string/sunrise_sunset"
            android:name=".sunrisesunset.SunriseSunsetResultActivity"
            android:exported="true" />
        <activity
            android:label="@string/sunrise_sunset"
            android:name=".sunrisesunset.SavedLocationsActivity"
            android:exported="true"/>
        <activity
            android:name=".dictionary.DictionaryResultActivity"
            android:exported="false" />

    </application>

</manifest>